<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="file">
		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="inputbox"
			size="58"
			default=""
		/>
		<field
			name="upload"
			type="file"
			label="COM_DOCSTATION_DOCUMENT_FIELD_FILE_LABEL"
			description="COM_DOCSTATION_DOCUMENT_FIELD_FILE_DESC"
			size="60"
			class="inputbox"
			required="true"
			default=""
		/>
		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
			size="40"
		/>
		<field
			name="description"
			type="editor"
			buttons="false"
			label="COM_DOCSTATION_DOCUMENT_FIELD_DESC_LABEL"
			description="COM_DOCSTATION_DOCUMENT_FIELD_DESC_DESC"
			class="inputbox"
			default=""
			filter="safehtml"
		/>
	</fieldset>
	
	<fieldset name="main">
		<field
			name="replace"
			type="hidden"
			label="COM_DOCSTATION_DOCUMENT_FIELD_REPLACE_FILE_LABEL"
			description="COM_DOCSTATION_DOCUMENT_FIELD_REPLACE_FILE_DESC"
			size="60"
			class="inputbox"
			default=""
		/>
		<field
			name="tags"
			type="tag"
			label="JTAG"
			description="JTAG_DESC"
			class="inputbox span12 small"
			multiple="true"
		/>
		<field
			name="parent_id"
			type="category"
			extension="com_docstation"
			class="inputbox"
			label="JCATEGORY"
			description="JFIELD_CATEGORY_DESC"
			required="true"
		/>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			filter="intval"
			size="1"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1"
		/>
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="JFIELD_LANGUAGE_DESC"
			class="inputbox"
			>
			<option value="*">JALL</option>
		</field>
	</fieldset>

	<fieldset name="attribs">
		<field
			name="ordering"
			type="hidden"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			class="inputbox"
			size="6"
			default=""
		/>
		<field
			name="created"
			type="calendar"
			label="COM_DOCSTATION_FIELD_CREATED_LABEL"
			description="COM_DOCSTATION_FIELD_CREATED_DESC"
			class="inputbox"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<field
			name="publish_up"
			type="calendar"
			label="COM_DOCSTATION_FIELD_PUBLISH_UP_LABEL"
			description="COM_DOCSTATION_FIELD_PUBLISH_UP_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
			filter="user_utc"
		/>
		<field
			name="publish_down"
			type="calendar"
			label="COM_DOCSTATION_FIELD_PUBLISH_DOWN_LABEL"
			description="COM_DOCSTATION_FIELD_PUBLISH_DOWN_DESC"
			class="inputbox"
			format="%Y-%m-%d %H:%M:%S"
			size="22"
			filter="user_utc"
		/>
		<field
			name="created_by"
			type="user"
			label="COM_DOCSTATION_FIELD_CREATED_BY_LABEL"
			description="COM_DOCSTATION_FIELD_CREATED_BY_DESC"
		/>
		<field
			name="modified"
			type="calendar"
			class="readonly"
			label="COM_DOCSTATION_FIELD_MODIFIED_LABEL"
			description="COM_DOCSTATION_FIELD_MODIFIED_DESC"
			size="22"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<field
			name="modified_by"
			type="user"
			label="COM_DOCSTATION_FIELD_MODIFIED_BY_LABEL"
			description="COM_DOCSTATION_FIELD_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<field
			name="id"
			type="text"
			class="readonly"
			label="COM_DOCSTATION_FIELD_ID_LABEL"
			description="COM_DOCSTATION_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
		/>
		<field
			name="checked_out"
			type="hidden"
			filter="unset"
		/>
		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"
		/>
		<field
			name="parent_type"
			type="hidden"
			required="true"
			default=""
		/>
	</fieldset>
</form>